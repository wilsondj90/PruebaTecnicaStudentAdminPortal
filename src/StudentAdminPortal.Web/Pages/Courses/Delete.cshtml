@page
@model StudentAdminPortal.Web.Pages.Courses.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar </h1>

<h3>¿Seguro que desea eliminar esta materia?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Code)
        </dd>
        <dt class="col-sm-2">
            Créditos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Credits)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Course.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver</a>
    </form>
</div>
