@page
@model StudentAdminPortal.Web.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Lista materias</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
           Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Code)
        </dd> 
        <dt class="col-sm-2">
           Créditos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Credits)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.Id">Editar</a> |
    <a asp-page="./Index">Volver</a>
</div>
