@page
@model StudentAdminPortal.Web.Pages.RegistrationCourses.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Elimar</h1>

<h3>¿Seguro que desea eliminar esta materia?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Materia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationCourse.Course.Name)
        </dd>
        <dt class="col-sm-2">
            Crédito
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationCourse.Course.Credits)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="RegistrationCourse.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver</a>
    </form>
</div>
