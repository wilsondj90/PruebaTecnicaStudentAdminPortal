@page
@model StudentAdminPortal.Web.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Student";
}

<h1>Lista estudiantes</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
           Número documento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.DocumentNumber)
        </dd>
        <dt class="col-sm-2">
            Correo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Id">Editar</a> |
    <a asp-page="./Index">volver</a>
</div>
