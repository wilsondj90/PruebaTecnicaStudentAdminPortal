@page
@model StudentAdminPortal.Web.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "Student";
}

<h1>Eliminar</h1>

<h3>¿Seguro que desea eliminar este estudiante?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
           Número documento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.DocumentNumber)
        </dd>
        <dt class="col-sm-2">
            Correo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Student.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver</a>
    </form>
</div>
